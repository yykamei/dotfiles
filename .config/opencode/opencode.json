{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-opus-4.5",
  "autoupdate": false,
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:MY_GITHUB_TOKEN}",
        "X-MCP-Toolsets": "copilot_spaces"
      }
    }
  }
}
